doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="shortcut icon" href="https://socket.io/images/logo.svg" type="image/x-icon")
    body 
        h1 Home
        main 
            div#welcome
                form(class="create-room-form")
                    input(class="create-room-input" placeholder="room name", required, type="text") 
                    button Enter Room 
            div#room
                h3(class="room-title")
                ul(class="room-chat-ul")
                form(class="room-chat-form")
                    input(class="room-chat-input" placeholder="message", required, type="text")
                    button Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js")